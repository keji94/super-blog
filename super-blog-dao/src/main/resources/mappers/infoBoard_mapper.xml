    where id = #{id,jdbcType=BIGINT}
  </select>

    <select id="selectByCondition" resultMap="BaseResultMap" parameterType="com.keji.blog.dataobject.InfoBoardDO">
        select
        <include refid="Base_Column_List" />
        from info_board
