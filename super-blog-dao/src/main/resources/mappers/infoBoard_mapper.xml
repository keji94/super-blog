  <insert id="insert" parameterType="com.keji.blog.dataobject.InfoBoardDO" >
    insert into info_board (id, gmt_create, gmt_modified, title, content)
    values (#{id,jdbcType=BIGINT}, now(), now(), #{title,jdbcType=VARCHAR}, #{content,jdbcType=VARCHAR})
  </insert>

  <update id="updateByPrimaryKeySelective" parameterType="com.keji.blog.dataobject.InfoBoardDO" >
    update info_board
    <set >
      <if test="gmtCreate != null" >
        gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},
      </if>
      <if test="title != null" >
        title = #{title,jdbcType=VARCHAR},
      </if>
      <if test="content != null" >
        content = #{content,jdbcType=VARCHAR},
      </if>
        gmt_modified = now()
    </set>
    where id = #{id,jdbcType=BIGINT}
  </update>

