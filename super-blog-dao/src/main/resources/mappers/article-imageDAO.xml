<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.keji.blog.dao.ArticleImageDAO">
    <resultMap id="BaseResultMap" type="com.keji.blog.dataobject.ArticleImageDO">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="image_url" jdbcType="VARCHAR" property="imageUrl"/>
        <result column="article_id" jdbcType="BIGINT" property="articleId"/>
        <result column="gmt_created" jdbcType="TIMESTAMP" property="gmtCreate"/>
        <result column="gmt_modified" jdbcType="TIMESTAMP" property="gmtModified"/>
    </resultMap>
    <sql id="Base_Column_List">
    id, image_url, article_id,gmt_create, gmt_modified
    </sql>

    <select id="selectByArticleId" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from article_image
        where article_id = #{articleId,jdbcType=BIGINT}
    </select>
</mapper>